{
  "private": true,
  "scripts": {
    "⬇️⬇️⬇️⬇️⬇️ package ⬇️⬇️⬇️⬇️⬇️": "▼▼▼▼▼ package ▼▼▼▼▼",
    "build": "lerna exec --scope @uiw/* -- tsbb build src/*.tsx --use-babel --cjs cjs --bail",
    "watch": "lerna exec \"tsbb watch src/*.tsx --use-babel --cjs cjs\" --scope @uiw/*",
    "⬆️⬆️⬆️⬆️⬆️ package ⬆️⬆️⬆️⬆️⬆️": "▲▲▲▲▲ package ▲▲▲▲▲",
    "start": "lerna exec --scope website -- npm run start",
    "doc": "lerna exec --scope website -- npm run build",
    "bootstrap": "lerna bootstrap",
    "hoist": "lerna bootstrap --hoist",
    "test": "tsbb test",
    "coverage": "tsbb test --coverage --bail",
    "prepare": "husky install",
    "version": "lerna version --exact --force-publish --no-push --no-git-tag-version",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "remove": "npm run clean && lerna exec \"rm -rf package-lock.json\" --scope @uiw/* --scope website",
    "clean": "lerna clean --yes"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,less,md,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/core/src/**/*.{js,jsx,ts,tsx}"
    ],
    "testMatch": [
      "<rootDir>/test/*.{ts,tsx}"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/?!(.*)"
    ]
  },
  "workspaces": [
    "website",
    "core"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "husky": "^8.0.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.6.0",
    "jest-environment-node": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "lerna": "^7.1.4",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.1",
    "tsbb": "^4.1.14"
  }
}
